mixin history(date, title, text, img_url)
    .history-grid-date=date
    .history-grid-row
        .history-grid-container
            .history-grid-info
                .title=title
                .text=text    
        .history-grid-container.history-grid-left_line
            .img(style = attributes.style) 
        
        
mixin history-reverse(date, title, text, img_url)
    .history-grid-date.history-blue=date
    .history-grid-row.history-grid-row--reverse     
        .history-grid-container
            .img(style = attributes.style)
        .history-grid-container.history-grid-left_line
            .history-grid-info
                .title=title
                .text=text   


.history 
    .history-bg_text История
    .history-title История
